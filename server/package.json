{
  "name": "url-shortener-api",
  "version": "1.0.0",
  "description": "A URL shortener API built with Node.js, Express, and MongoDB",
  "main": "src/server.ts",
  "scripts": {
    "test": "jest --verbose src",
    "start": "node dist/server.js",
    "dev": "nodemon -L src/server.ts",
    "build": "tsc"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/?(*.)+(spec|test).[jt]s?(x)"],
    "moduleFileExtensions": ["ts", "js"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.4.1",
    "express-mysql-session": "^2.1.4",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.17.1",
    "express-validator": "^7.0.1",
    "if-env": "^1.0.4",
    "moment": "^2.29.4",
    "mongoose": "^8.9.2",
    "mysql2": "^2.1.0",
    "nanoid": "^5.0.9",
    "nodemailer": "^6.9.8",
    "open-graph-scraper": "^6.8.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "sequelize": "^6.31.0",
    "ts-node": "^10.9.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.14",
    "concurrently": "^5.2.0",
    "jest": "^29.7.0",
    "mockingoose": "^2.16.2",
    "nodemon": "^2.0.4",
    "prettier-standard": "^16.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AtriAhmed/passport-local-mern-mysql-backend"
  },
  "author": "Atri Ahmed",
  "license": "MIT"
}
